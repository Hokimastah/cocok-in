{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/login.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/signin.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/register.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/tes.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/rekomendasi.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/karir.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/konsultasi.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1.html"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    }
  ]
}
